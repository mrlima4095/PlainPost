            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background: #3700b3;
        }
    </style>
</head>
<body>
    <header>
        Editor de Arquivo - BinDrop
    </header>
    
    <div id="editor-container">
        <textarea id="editor"></textarea>
    </div>

    <div id="buttons">
        <button onclick="saveFile()">Salvar Alterações</button>
        <button onclick="window.location.href='/api/drive/download/{{ file_id }}'">Baixar</button>
    </div>

    <!-- CodeMirror JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/javascript/javascript.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/python/python.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/xml/xml.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/css/css.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/mode/htmlmixed/htmlmixed.min.js"></script>
    
    <script>
        const fileId = "{{ file_id }}";
        let editor;

        // Inicializa CodeMirror
        editor = CodeMirror.fromTextArea(document.getElementById('editor'), {
            lineNumbers: true,
            theme: 'dracula',
            mode: 'javascript',
            tabSize: 4,
            indentWithTabs: true
        });

        // Carregar conteúdo do arquivo
        fetch(`/api/drive/view/${fileId}`)
            .then(response => response.json())
            .then(data => {
                if(data.success) {
                    editor.setValue(data.content);
                } else {
                    alert(data.response);
                }
            })
            .catch(err => alert("Erro ao carregar arquivo: " + err));

        // Salvar alterações
        function saveFile() {
            const newContent = editor.getValue();
            
            fetch(`/api/drive/save/${fileId}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({content: newContent})
            })
            .then(response => response.json())
            .then(data => {
                alert(data.response || "Erro ao salvar");
            })
            .catch(err => alert("Erro: " + err));
        }
    </script>
</body>
</html>
