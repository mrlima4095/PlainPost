    <title>Editor de Arquivo - BinDrop</title>
    
    <!-- CodeMirror CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.5/theme/dracula.min.css">
    
    <style>
        body {
            background-color: #121212;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        header {
            background: #1f1f1f;
            padding: 10px;
            text-align: center;
            font-size: 18px;
        }
        #editor-container {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        #editor {
            flex: 1;
            border: 1px solid #333;
            font-size: 14px;
        }
        #buttons {
            background: #1f1f1f;
            padding: 10px;
            text-align: right;
        }
        button {
            padding: 8px 15px;
            margin-left: 10px;
            background: #6200ee;
